{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build",
            "command": "${workspaceFolder}\\build.bat",
            "args": [
                "/Z7",
                "/EHsc",
                "@${workspaceFolder}/build.rsp",
                "/Fo:${workspaceFolder}\\bin\\",
                "/Fe:${workspaceFolder}\\bin\\sandbox.exe",
                "${workspaceFolder}\\source\\*.cpp",
                "/link",
                "/PDB:${workspaceFolder}\\bin\\sandbox.pdb"
            ],
            "problemMatcher": ["$msCompile"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}